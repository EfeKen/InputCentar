<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InputCentar.Edukacije"
             Title="Edukacije">
    <ScrollView>
        <StackLayout Padding="20">

            <StackLayout>
                <ImageButton Source="edukacija1.jpg"
                     Clicked="ImageButton_Clicked"/>
            </StackLayout>
            <Image Source="edukacija2.jpg"
               Aspect="AspectFit"/>
            <Image Source="edukacija3.jpg"
               Aspect="AspectFit"/>
            <Image Source="edukacija4.jpg"
               Aspect="AspectFit"/>
            <Image Source="edukacija5.jpg"
               Aspect="AspectFit"/>
            <Image Source="edukacija6.jpg"
               Aspect="AspectFit"/>
            
            <Image Source="logo.png"
                   Aspect="AspectFit"
                   HeightRequest="50"
                   HorizontalOptions="Center"/>
        </StackLayout>
    </ScrollView>
</ContentPage>