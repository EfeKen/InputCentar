<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InputCentar.Kalendar">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Reservation Calendar" FontSize="24" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />
            <Label Text="Izaberite datum pocetka rezervacije" FontSize="24" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />
            <DatePicker x:Name="startDatePicker" DateSelected="StartDateSelected" />
            <Label Text="Izaberite datum kraja rezervacije" FontSize="24" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />
            <DatePicker x:Name="endDatePicker" DateSelected="EndDateSelected" />
            <Button Text="Make Reservation" Clicked="MakeReservationClicked" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
