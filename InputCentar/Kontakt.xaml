<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:inputCentar="using:InputCentar"
             x:Class="InputCentar.Kontakt"
             Title="Kontakt">

    <Shell.TitleView>
        <inputCentar:LogoTileView/>
    </Shell.TitleView>

    <ScrollView>
        <StackLayout>
            <Image Source="mapa.png"
                   Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
            <ImageButton Source="adresa.png"
                         Clicked="ImageButton_Clicked"/>
            <ImageButton Source="telefon.png"
                         Clicked="OnCallButtonClicked"/>
            <ImageButton Source="mail.png"
                         Clicked="ImageButton_ClickedI"/>
        </StackLayout>
    </ScrollView>

</ContentPage>