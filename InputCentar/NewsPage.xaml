<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InputCentar.NewsPage"
             Title="NewsPage">

    <ScrollView>
        <StackLayout Padding="20">
            <Image x:Name="NewsImage" HeightRequest="200" Aspect="AspectFill" />
            <Label x:Name="NewsTitle" FontSize="24" FontAttributes="Bold" TextColor="Black" />
            <Label x:Name="newsDescription" FontSize="14" TextColor="Gray" />
            <Label x:Name="newsDate" FontSize="12" TextColor="Gray" />
            <Label x:Name="newsDetailText" FontSize="14" TextColor="Black" />
           
        </StackLayout>
    </ScrollView>
</ContentPage>