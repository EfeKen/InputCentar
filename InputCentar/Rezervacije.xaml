
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InputCentar.Rezervacije">

    <StackLayout Orientation="Vertical">

        <!-- Horizontal Scrollable Segment -->
        <ScrollView Orientation="Horizontal">
            <CollectionView x:Name="SegmentedControl"
                            ItemsSource="{Binding SegmentItems}"
                            SelectionMode="Single"
                            SelectionChanged="SegmentedControl_SelectionChanged">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Image Source="{Binding IconSource}" HeightRequest="30" WidthRequest="30" />
                            <Label Text="{Binding Title}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Your Content Below -->
        <StackLayout Orientation="Vertical">
            <!-- Your content here -->
        </StackLayout>

    </StackLayout>
</ContentPage>
