<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InputCentar.Upit"
             Title="Upit">
    <VerticalStackLayout>
        <Label 
            Text="Postavite pitanje"
            FontSize="24"
            FontAttributes="Bold"
            Margin="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Frame
            BorderColor="Black"
            CornerRadius="20"
            Margin="16">
            <VerticalStackLayout>
                <Editor 
                    Placeholder="Upišite pitanje ovdje"
                    AutoSize="TextChanges"
                    HeightRequest="160"/>
                <Button Text="Pošalji" Margin="20" Clicked="Button_Clicked"/>
            </VerticalStackLayout>
        </Frame>
        <Image Source="logo.png"
               Margin="20"
               Aspect="AspectFit"
               HeightRequest="50"
               HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>